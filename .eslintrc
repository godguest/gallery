{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "quotes": [1, "single"],
    "comma-dangle": 1,
    "comma-spacing": 1,
    "block-spacing": [1, "never"],
    "array-bracket-spacing": 1,
    "computed-property-spacing": 1,
    "space-in-parens": 1,
    "object-curly-spacing": 1,
    "template-curly-spacing": 1,
    "arrow-spacing": 1,
    "semi-spacing": 1,
    "semi": 1,
    "no-extra-semi": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-underscore-dangle": 1,
    "no-console": 1,
    "no-var": 1,
    "no-unused-vars": 1,
    "no-undef": 1,
    "no-trailing-spaces": 1,
    "no-unreachable": 1,
    "no-alert": 1,
    "space-infix-ops": 1,
    "indent": [1, 2, {"VariableDeclarator": {"var": 2, "let": 2, "const": 3}}],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1
  }
}
